#Set up dice roller logic

import random

#Roll how_manyDkind of dice
def roll_dice(how_many, kind):
    total = 0
    output_str = str(how_many) + "d" + str(kind) + ": "
    
    #Roll the choosen dice how_many times
    for x in range (1, how_many + 1):
        number = random.randint(1,kind)
        total += number
        output_str = output_str + (str(number))
        if 0 < x < how_many:
            output_str = output_str + (" + ")

    output_str = output_str + (" = ") + str(total)

    return (output_str)

#Choose a random entry from a json file
def random_entry(file_name):
    #Find file length
    file_length = 10 #placeholder until json file example is ready
    #Roll random number
    index = random.randint(1,file_length)
    return (index)

    #Use the index to find entry in the json file and return that entry


def main():
    print ("Dice roller: ", roll_dice(3,12))
    print ("Entry finder index: ", random_entry("file_name"))

#This little chunk of code allows this python program to be either used directly or imported into another program
if __name__ == "__main__":
    main()    